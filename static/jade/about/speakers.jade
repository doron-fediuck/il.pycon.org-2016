extends ../base
//- HIDE FOR NOW
//- render single speaker

mixin talk(workshop)
  if workshop.title
    .workshop
      h3(id=workshop.title)
        = workshop.title
        if workshop.name
          small
              |  by 
          normal
              = workshop.name

      if workshop.avatar
          img.avatar(src=avatar(workshop.avatar),alt='')
      if workshop.avatar2
          img.avatar(src=avatar(workshop.avatar2),alt='')

      .misc
        small
          = workshop.time
          if workshop.track
              |  Track:
              = workshop.track

      if workshop.bio
          h4 Bio
              if workshop.github
                  a.social.github(href="https://github.com/" + workshop.github)
                      .fa.fa-github
              if workshop.twitter
                  a.social.twitter(href="https://twitter.com/" + workshop.twitter)
                      .fa.fa-twitter
          != md(workshop.bio)

      if workshop.bio2
          h4 Bio 
              if workshop.github2
                  a.social.github(href="https://github.com/" + workshop.github2)
                      .fa.fa-github
              if workshop.twitter2
                  a.social.twitter(href="https://twitter.com/" + workshop.twitter2)
                      .fa.fa-twitter
          != md(workshop.bio2)

      if workshop.abstract
          h4 Abstract
          != md(workshop.abstract)

block vars
  - var pageClass = "page-workshops"
  - var activePage = "workshops"

block viewport
  .container
    h1 Session details
    
    //-  Iterate over workshops object (loaded in gulpfile from data/workshops.json)
    //-  and render mixin talk() (see above)
    each speaker, index in speakers
      +talk(speaker[0])
      +talk(speaker[1])
  
